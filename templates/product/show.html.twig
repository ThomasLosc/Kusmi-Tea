{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - Kusmi Tea{% endblock %}

{% block body %}
<div class="product__add-to-cart__message">
    <p>Produit ajouté au panier</p>
</div>
<div class="container-fluid py-4" style="background-color: #fcebd2">
    <div class="row w-75 mx-auto">
        <div class="col-md-7">
            <div class="product-image-container d-flex justify-content-center mt-4">
                <img src="{{ vich_uploader_asset(product, 'imageFile') }}" alt="{{ product.name }}" style="max-width: 400px;max-height: 400px">
            </div>
        </div>
        <div class="offset-md-1 col-md-4">
            <div class="price-card">
                <div class="top-price-card">
                    <div class="product-card-left">
                        <div class="product-card-name">
                            {{ product.name }}
                        </div>
                        <div class="product-card-description">
                            {{ product.description }}
                        </div>
                        <div class="product-card-weight fw-bold">
                            {{ product.weight }}g
                        </div>
                    </div>
                    <div class="product-card-price">
                        {{ product.price }}€
                    </div>
                </div>
                <a href="" class="btn btn-add-to-cart" data-product-id="{{ product.id }}" data-quantity="1">
                    AJOUTER
                </a>
            </div>
        </div>
    </div>
</div>
<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <img src="{{ qr_code_path('http://127.0.0.1:8000/product/' ~ product.uuid, 'custom') }}" alt="" style="border-radius: 15px" width="250px">
        </div>
    </div>
</div>
{% endblock %}

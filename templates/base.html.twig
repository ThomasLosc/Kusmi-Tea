<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('build/images/favicon.ico') }}">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {% block stylesheets %}
        <!-- PLUGIN -->
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
            <script src="https://kit.fontawesome.com/f560ccd9e1.js" crossorigin="anonymous"></script>
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"/>
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
            {{ encore_entry_script_tags('app') }}
            {{ encore_entry_script_tags('header') }}
            {{ encore_entry_script_tags('footer') }}
            {{ encore_entry_script_tags('home') }}
        {% endblock %}
    </head>
    <body>
        {% if isCartPage is defined and isCartPage %}
            {% include 'header/cart_header.html.twig' %}
        {% else %}
            {% include 'header/index.html.twig' %}
        {% endif %}
        {% block body %}{% endblock %}
        {{ include('footer/index.html.twig') }}
    </body>
</html>

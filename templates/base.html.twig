<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('build/images/icon-site.webp') }}" type="image/png">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {% block stylesheets %}
        <!-- PLUGIN -->
            <script src="https://kit.fontawesome.com/f560ccd9e1.js" crossorigin="anonymous"></script>
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
            {{ encore_entry_script_tags('app') }}
            {{ encore_entry_script_tags('header') }}
            {{ encore_entry_script_tags('footer') }}
        {% endblock %}
    </head>
    <body>
        {{ include('header/index.html.twig') }}
        {% block body %}{% endblock %}
        {{ include('footer/index.html.twig') }}
    </body>
</html>

{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}

<div class="container-fluid register">
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="{{ path('app_login') }}">CONNEXION</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="{{ path('app_register') }}">CRÉER UN COMPTE</a>
      </li>
    </ul>
</div>

<div class="container-fluid register-id">
  <div class="row w-50 w-100-sm">
    <div class="col-md-12 border bg-light">
        <div class="p-3">
            <h5 class="mt-3 mb-3">Mot de passe oublié</h5>
            <p><span class="text-danger">*</span> Champs requis </p>
            <hr class="mb-3 mt-3">
            {% for flash_error in app.flashes('reset_password_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}
            {{ form_start(requestForm) }}

            <div class="row">
                <div class="col-md-12">
                    <label for="{{ requestForm.email.vars.id }}" class="form-label"><span class="text-danger">*</span> Email</label>
                </div>
                <div class="col-md-12">
                    {{ form_widget(requestForm.email, {'attr': {'class': 'input-design'}}) }}
                    {% if requestForm.email.vars.errors|length > 0 %}
                        <div class="invalid-feedback">
                            {{ form_errors(requestForm.email) }}
                        </div>
                    {% endif %}
                </div>
            </div>
            <button class="mt-5 btn-connexion" type="submit">
                RECEVOIR UN MAIL
            </button>
            {{ form_end(requestForm) }}
        </div>
      </div>
  </div>
</div>
{% endblock %}

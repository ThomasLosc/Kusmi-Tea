{% extends 'base.html.twig' %}

{% block title %}Modifier le mot de passe{% endblock %}

{% block body %}
<div class="container-fluid register">
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="{{ path('app_login') }}">CONNEXION</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="{{ path('app_register') }}">CRÉER UN COMPTE</a>
      </li>
    </ul>
</div>

<div class="container-fluid register-id">
  <div class="row w-50 w-100-sm">
    <div class="col-md-12 border bg-light">
        <div class="p-3">
            <h5 class="mt-3 mb-3">MODIFIER LE MOT DE PASSE</h5>
            {{ form_start(resetForm) }}
            <div class="row">
                 <div class="col-md-12 mt-3">
                  <label for="{{ resetForm.plainPassword.first.vars.id }}" class="form-label"><span class="text-danger">*</span> Mot de passe</label>
                  {{ form_widget(resetForm.plainPassword.first, { 'attr': {'class': 'input-design', 'autocomplete': 'new-password'} }) }}
                  <span class="mdp-size mt-2">Celui ci doit inclure : 8 caractères minimum, 1 minuscule, 1 majuscule, 1 chiffre et 1 caractère alphanumérique</span>
                </div>
                <div class="col-md-12 mt-3">
                  <label for="{{ resetForm.plainPassword.second.vars.id }}" class="form-label"><span class="text-danger">*</span> Confirmer le mot de passe</label>
                  {{ form_widget(resetForm.plainPassword.second, { 'attr': {'class': 'input-design', 'autocomplete': 'new-password'} }) }}
                </div>
            </div>
            <button class="mt-5 btn-connexion" type="submit">
                MODIFIER LE MOT DE PASSE
            </button>
            {{ form_end(resetForm) }}
        </div>
      </div>
  </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}

<div class="container-fluid profil-id">
  <div class="row w-50 w-100-sm">
    <div class="col-md-12 border bg-light">
        <div class="p-3">
            <h5 class="mt-3 mb-3">Mon profil</h5>
            <hr class="mb-3 mt-3">

            <div class="row">
                <div class="col-md-12">
                    <label for="prenom" class="form-label">Prénom :</label>
                    <input type="text" class="input-design" id="prenom" name="prenom" value="{{ app.user.prenom }}" disabled>
                </div>
                <div class="col-md-12 mt-3">
                    <label for="nom" class="form-label">Nom :</label>
                    <input type="text" class="input-design" id="nom" name="nom" value="{{ app.user.nom }}" disabled>
                </div>
                <div class="col-md-12 mt-3">
                    <label for="email" class="form-label">E-mail :</label>
                    <input type="text" class="input-design" id="email" name="email" value="{{ app.user.email }}" disabled>
                </div>
                <a href="{{ path('app_logout') }}" class="btn-connexion mt-5">
                    SE DÉCONNECTER
                </a>
            </div>
        </div>
      </div>
  </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
<div class="container-fluid profil">
    <h1 class="text-center active">MON COMPTE</h1>
</div>

{% for message in app.flashes('success') %}
    <div class="container-fluid profil">
            <div class="alert" role="alert">
                <div class="flash-message d-flex align-items-center justify-content-center">
                <strong class="me-3">{{ message }}</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    </div>
{% endfor %}



<div class="container-fluid profil-id">
    <div class="row w-80 mx-auto">
        <div class="col-md-7 me-4">
            <div class="border bg-light">
                <div class="p-3">
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <h5>Informations personnelles</h5>
                        <a class="a-btn" href="{{ path('app_profil_edit') }}">Modifier</a>
                    </div>
                    <hr class="mb-3 mt-3">
                    <p class="label">Prénom</p>
                    <p class="label-2">{{ app.user.prenom }}</p>
                    <p class="label">Nom</p>
                    <p class="label-2">{{ app.user.nom }}</p>
                    <p class="label">E-mail</p>
                    <p class="label-2">{{ app.user.email }}</p>
                    <p class="label">Date de naissance</p>
                    <p class="label-2">{{ (app.user.dateNaissance is null) ? 'Renseignez votre date de naissance.' : app.user.dateNaissance|date('') }}</p>
                </div>
            </div>

            <div class="border bg-light mt-3">
                <div class="p-3">
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <h5>Mot de passe</h5>
                        <a class="a-btn" href="#">Modifier</a>
                    </div>
                    <hr class="mb-3 mt-3">
                    <p class="label">Mot de passe</p>
                    <p class="label-2">**************</p>
                </div>
            </div>

            <div class="border bg-light mt-3">
                <div class="p-3">
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <h5>Carnet d’adresses</h5>
                        <a class="a-btn" href="#">Ajouter</a>
                    </div>
                    <hr class="mb-3 mt-3">
                    {% if app.user.adresse is null %}
                    <p class="label-2">Renseignez une adresse pour passer votre commande rapidement.</p>
                    {% else %}
                    <p class="label">Adresse</p>
                    <p class="label-2">{{ app.user.adresse }}</p>
                    <p class="label">Code postal</p>
                    <p class="label-2">{{ app.user.codePostal }}</p>
                    <p class="label">Ville</p>
                    <p class="label-2">{{ app.user.ville }}</p>
                    <p class="label">Pays</p>
                    <p class="label-2">{{ app.user.pays }}</p>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="border bg-light">
                <div class="p-3 d-flex align-items-center flex-column">
                    <h5 class="mt-3">Programme de fidélité</h5>
                    <hr class="mb-3 mt-3">
                    <img src="{{ asset('build/images/KusmiKlub.webp') }}" alt="club">
                    <a href="#" class="btn-club mt-5">REJOIGNEZ NOTRE KUSMIKLUB</a>
                </div>
            </div>
            <div class="border bg-light mt-3">
                <div class="p-3 d-flex justify-content-center flex-column">
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <h5>Paiement</h5>
                        <a href="#" class="a-carte">Voir</a>
                    </div>
                    <hr class="mb-3 mt-3">
                    <a href="#" class="a-carte">Ajouter une nouvelle carte</a>
                </div>
            </div>
            <div class="border bg-light mt-3">
                <div class="p-3 d-flex justify-content-center flex-column">
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <h5>Abonnements</h5>
                        <a href="#" class="a-carte">Modifier</a>
                    </div>
                    <hr class="mb-3 mt-3">
                    <p class="label">Abonné(e) via</p>
                    <p class="label-2">E-mail - {{ app.user.email }}</p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

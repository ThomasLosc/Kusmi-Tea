{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
<div class="container-fluid article">
    <h1 class="text-center active">Le Blog K by Kusmi</h1>
</div>

<div class="container-fluid categories">
    {% for category in categories %}
    <a href="{{ path('app_article', {'categorie': category.id}) }}" class="btn-category {{ currentCategorie == category.id ? 'active' : '' }}">{{ category.nom }}</a>
    {% endfor %}
</div>
<div class="container-fluid article-id">
    <div class="row largeur-block">
        {% for article in articles %}
        <div class="col-md-3">
            <div class="card mb-3">
                <div class="card-image">
                    <img src="{{ vich_uploader_asset(article, 'imageFile') }}" alt="Kusmi Tea">
                </div>
                <div class="card-body d-flex align-items-center flex-column">
                    <h2 class="card-title">{{ article.nom }}</h2>
                    <p class="card-text">{{ article.description|slice(0, 200) }}</p>
                    <a href="{{ path('app_article_show', {'id': article.id}) }}"  class="btn-article-2">VOIR L'ARTICLE</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}

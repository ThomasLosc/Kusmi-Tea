{% extends 'base.html.twig' %}

{% block title %}Créer un compte{% endblock %}

{% block body %}
<div class="container-fluid register">
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link" href="{{ path('app_login') }}">CONNEXION</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" href="{{ path('app_register') }}">CRÉER UN COMPTE</a>
        </li>
    </ul>
</div>

<div class="container-fluid register-id">
    <div class="row w-50 w-100-sm">
        <div class="col-md-12 border bg-light">
            <div class="p-3">
                <h5 class="mt-3 mb-3">Créer un compte</h5>
                <p class="mt-3"><span class="text-danger">*</span> Champs requis </p>
                <hr class="mb-3 mt-3">

                {% for flash_message in app.flashes('error') %}
                    <div class="alert alert-danger">{{ flash_message }}</div>
                {% endfor %}

                {% if form_errors(registrationForm) %}
                    <div class="alert alert-danger">
                        {{ form_errors(registrationForm) }}
                    </div>
                {% endif %}

                {{ form_start(registrationForm) }}
                <div class="row">
                    <div class="col-md-12">
                        {{ form_row(registrationForm.prenom) }}
                    </div>
                    <div class="col-md-12 mt-3">
                        {{ form_row(registrationForm.nom) }}
                        {{ form_errors(registrationForm.nom) }}
                    </div>
                    <div class="col-md-12 mt-3">
                        {{ form_row(registrationForm.pays) }}
                    </div>
                    <div class="col-md-12 mt-3">
                        {{ form_row(registrationForm.email) }}
                    </div>
                    <div class="col-md-12 mt-3">
                        <label for="{{ registrationForm.plainPassword.first.vars.id }}" class="form-label"><span class="text-danger">*</span> Mot de passe</label>
                        {{ form_widget(registrationForm.plainPassword.first, { 'attr': {'class': 'input-design', 'autocomplete': 'new-password'} }) }}
                        <span class="mdp-size mt-2">Celui ci doit inclure : 8 caractères minimum, 1 minuscule, 1 majuscule, 1 chiffre et 1 caractère alphanumérique</span>
                </div>
                <div class="col-md-12 mt-3">
                        <label for="{{ registrationForm.plainPassword.second.vars.id }}" class="form-label"><span class="text-danger">*</span> Confirmer le mot de passe</label>
                        {{ form_widget(registrationForm.plainPassword.second, { 'attr': {'class': 'input-design', 'autocomplete': 'new-password'} }) }}
                    </div>
                </div>
                <button class="mt-5 btn-connexion" type="submit">SUIVANT</button>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Categorie Article{% endblock %}

{% block body %}
    <div class="container my-4">
        <div class="row mb-4">
            <div class="col-12">
                {% for label, flashes in app.session.flashbag.all %}
                    {% for flash in flashes %}
                        {% if ( label == 'success' ) %}
                            <div class="alert alert-success" role="alert"><i class="fas fa-check"></i>
                                {{ flash }}
                            </div>
                        {% elseif ( label == 'error' ) %}
                            <div class="alert alert-danger" role="alert"><i class="fas fa-exclamation-circle"></i>
                                {{ flash }}
                            </div>
                        {% endif %}
                    {% endfor %}
                {% endfor %}
            </div>
        </div>

        <div class="row">
            <div class="offset-md-2 col-md-8 border bg-light me-4">
                <div class="p-3">
                    <h5 class="mt-3">Liste des catégories pour les articles</h5>
                    <hr class="mb-3 mt-3">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th scope="col">Nom</th>
                            <th scope="col">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for categorie in categorie_articles %}
                            <tr>
                                <td>
                                    <td>{{ categorie.nom }}</td>
                                </td>
                                <td>
                                    <a href="{{ path('app_categorie_article_edit', {'id': categorie.id}) }}">Modifier</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <a href="{{ path('app_categorie_article_new') }}" class="btn btn-primary mt-4" style="background-color: #000;border: none;color: #fff;padding: 15px;width: 100%;">Ajouter une catégorie d'article</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
